@model eIDEAS.Models.Idea
@using eIDEAS.Models.Enums;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Edit Draft</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID"/>
            <input type="hidden" asp-for="UserID"/>
            <input type="hidden" asp-for="UnitID"/>
            <input type="hidden" asp-for="Status"/>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6 no-padding">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter problem description" style="height: 150px;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 no-padding" style="padding-left: 5px">
                    <label asp-for="SolutionPlan" class="control-label"></label>
                    <textarea asp-for="SolutionPlan" class="form-control" placeholder="Enter solution plan" style="height: 150px;"></textarea>
                    <span asp-validation-for="SolutionPlan" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Draft" class="btn btn-default" asp-route-isDraft="true" />
                <input type="submit" value="Submit Idea" class="btn btn-default" asp-route-isDraft="false" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
