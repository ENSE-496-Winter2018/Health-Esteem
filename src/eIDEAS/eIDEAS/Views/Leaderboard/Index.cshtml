@model IEnumerable<LeaderboardPresentationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Leaderboard</h2>
<a asp-area="" asp-controller="Leaderboard" asp-action="Index" asp-route-filterType="Team">Team Points</a>
<div class="row">
    <div class="col-md-6" style="float: left">
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Idea Points</th>
                <th>Participation Points</th>
            </tr>
            @foreach (var user in Model)
            {
            <tr>
                <td>@user.name</td>
                <td>@user.ideaPoints</td>
                <td>@user.participationPoints</td>
            </tr>
            }
        </table>
    </div>
    <div>
        <h3>This is where a graph of points/time will go</h3>
    </div>
    <div>
        <h3>This is where a pie chart of contributions will go</h3>
    </div>
</div>
