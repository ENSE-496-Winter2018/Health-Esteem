@model IEnumerable<ApplicationUserPresentationViewModel>
@{
    ViewData["Title"] = "Users";
}
@Html.Partial("_adminLayout")
<h1 class="text-center">Users</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Division)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdeaPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParticipationPoints)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <label>@user.FirstName @user.LastName</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Division)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.IdeaPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.ParticipationPoints)
                </td>
                <td>
                    <a class="btn-xs btn-primary" asp-action="Edit" asp-route-id="@user.ID">Edit</a> |
                    <a class="btn-xs btn-primary" asp-action="Delete" asp-route-id="@user.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p style="margin-bottom:30px;">
    <a class="btn btn-primary col-md-2 col-md-offset-10" asp-area="Identity" asp-page="/Account/Register" asp-route-createdByAdmin="true">Create New User</a>
</p>
